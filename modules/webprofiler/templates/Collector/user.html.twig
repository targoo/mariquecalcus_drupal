{% block toolbar %}
    {% set color_code = (collector.authenticated) ? 'green' : 'red' %}
    {% set icon %}
    <span>
    <img width="24" height="28" alt="User"
         src="data:image/png;base64,"/>
    <span class="sf-toolbar-info-piece-additional sf-toolbar-status sf-toolbar-status-{{ color_code }}"></span>

        {% if collector.authenticated %}
            <div class="sf-toolbar-status sf-toolbar-info-piece-additional-detail">{{ collector.name }}</div>
        {% endif %}
  </span>
    {% endset %}
    {% set text %}
    {% if collector.authenticated %}
        <div class="sf-toolbar-info-piece">
            <b>{{ 'Logged in as'|t }}</b>
            <span class="sf-toolbar-status sf-toolbar-status-{{ color_code }}">{{ collector.name }}</span>
        </div>
        <div class="sf-toolbar-info-piece">
            <b>{{ 'Roles'|t }}</b>
            <span>{{ collector.roles|join(', ') }}</span>
        </div>
        <div class="sf-toolbar-info-piece">
            <b>{{ 'Authenticated by'|t }}</b>
            <span>{{ collector.provider }}</span>
        </div>
    {% else %}
        {{ collector.anonymous }}
    {% endif %}
    {% endset %}

    <div class="sf-toolbar-block">
        <div class="sf-toolbar-icon">{{ icon|default('') }}</div>
        <div class="sf-toolbar-info">{{ text|default('') }}</div>
    </div>
{% endblock %}
